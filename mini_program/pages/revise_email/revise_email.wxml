<view class="wrap">
	<view class="head">

		<view class='one'>
			<image src="https://oeong.xyz/cqcq/public/images/mail.png"></image>
			<input type="text" style="width:90%" placeholder='请输入邮箱' bindinput='getEmailValue' value='{{email}}' />
		</view>

		<view class='two'>
			<image src="https://oeong.xyz/cqcq/public/images/captcha.png"></image>
			<input style="width:40%"  placeholder='请输入验证码' bindinput='getCodeValue' value='{{code}}' />
			<button style="border-radius: 5px;width:40%" class='num' bindtap='getVerificationCode' disabled='{{disabled}}'>{{codename}}</button>
		</view>
	</view>

	<button class="de" style="border-radius: 30px;width:80%" bindtap='save' hover-class="other-button-hover">
		<image src="/images/click.png"></image><text decode="{{true}}">&nbsp;提交</text>
		<!--https://oeong.xyz/cqcq/public/images/click.png-->
	</button>

</view>