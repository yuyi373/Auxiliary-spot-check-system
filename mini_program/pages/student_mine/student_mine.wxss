/* pages/student_mine/student_mine.wxss */
@import"/colorui/icon.wxss";
@import"/colorui/main.wxss";
@import "/colorui/animation.wxss";

.UCenter-bg {
  background-image: url(https://oeong.xyz/cqcq/public/images/bg8.png);/*url(https://image.weilanwl.com/color2.0/index.jpg );*/
  background-size: cover;
  height: 450rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color:#fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}


.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;  
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

.avatar {
  overflow: hidden;
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
}


button {
  margin: 5px;
  border: 1rpx solid rgb(197, 192, 192);
  background-color: #fff;
}

/** 添加自定义button点击态样式类**/
.other-button-hover {
  position: relative;
  top: 3rpx;
  box-shadow:0px 0px 10px #7EC4F8 inset; 
}

button{
  background-color: #7EC4F8;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.exit image{
  width: 55rpx;
  height: 55rpx;
}